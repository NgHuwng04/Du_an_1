<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Header với nút back và favorite -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnFavorite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_favorites"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Favorite" />
    </LinearLayout>

    <!-- Khu vực hình ảnh sản phẩm -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"/>

        <!-- Carousel indicator -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/circle_indicator_selected" />

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/circle_indicator_unselected" />

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/circle_indicator_unselected" />

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/circle_indicator_unselected" />
        </LinearLayout>
    </LinearLayout>

    <!-- Thông tin sản phẩm -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tên và giá sản phẩm -->
        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IPhone 16 Pro Max 256GB"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tvProductPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="29,990,000₫"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:layout_marginBottom="24dp"
            android:gravity="center"/>

        <!-- Phần Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Information :"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <!-- Các thông số kỹ thuật -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phiên bản : 256GB"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/info_background" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Màu sắc : Titan Sa Mạc"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/info_background" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kích thước màn hình : 6.9 inches"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/info_background" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chipset : Apple A18 Pro"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/info_background" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loại CPU : CPU 6 lõi mới với 2 lõi hiệu năng và 4 lõi hiệu suất"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:padding="12dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/info_background" />
        </LinearLayout>

        <!-- Nút Add to cart -->
        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Add to cart"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/button_add_to_cart_background"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

</LinearLayout>
